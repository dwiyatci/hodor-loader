{
  "name"           : "hodor-loader",
  "version"        : "0.0.0-semantically-released",
  "description"    : "A webpack loader for hodorifying JavaScript code",
  "keywords"       : [
    "hodor",
    "webpack-loader",
    "ecosystem:webpack",
    "hodor-loader",
    "hodorify",
    "lexer",
    "hold-the-door"
  ],
  "homepage"       : "https://github.com/dwiyatci/hodor-loader",
  "bugs"           : "https://github.com/dwiyatci/hodor-loader/issues",
  "license"        : "SEE LICENSE IN LICENSE.txt",
  "author"         : "Glenn Dwiyatcita <dwiyatci@mail.com> (https://tiny.cc/dwiyatci)",
  "main"           : "dist/index.js",
  "repository"     : {
    "type": "git",
    "url" : "https://github.com/dwiyatci/hodor-loader.git"
  },
  "scripts"        : {
    "clean"           : "rimraf dist",
    "install:global"  : "npm install rimraf updtr webpack webpack-dev-server babel-cli tape semantic-release-cli -g",
    "install:clean"   : "rimraf node_modules && npm install",
    "update"          : "updtr",
    "webpack"         : "webpack",
    "watch"           : "webpack -w",
    "start"           : "webpack-dev-server --inline --hot --content-base demo/",
    "test"            : "babel-node test.js | tnyan",
    "cov"             : "npm run cov:clean && npm run cov:generate",
    "cov:clean"       : "rimraf coverage",
    "cov:generate"    : "babel-node node_modules/.bin/isparta cover test.js",
    "cov:report"      : "cat ./coverage/lcov.info | codecov",
    "build"           : "npm run clean && webpack -p",
    "commit"          : "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "babel-cli"                : "6.9.0",
    "babel-loader"             : "6.2.4",
    "babel-preset-es2015"      : "6.9.0",
    "codecov.io"               : "0.1.6",
    "commitizen"               : "2.8.2",
    "cz-conventional-changelog": "1.1.6",
    "ghooks"                   : "1.2.1",
    "html-webpack-plugin"      : "2.19.0",
    "isparta"                  : "4.0.0",
    "rimraf"                   : "2.5.2",
    "semantic-release"         : "4.3.5",
    "tap-nyan"                 : "0.0.2",
    "tape"                     : "4.5.1",
    "updtr"                    : "0.1.15",
    "webpack"                  : "1.13.1",
    "webpack-dev-server"       : "1.14.1"
  },
  "config"         : {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks"    : {
      "pre-commit": "npm t"
    }
  }
}
